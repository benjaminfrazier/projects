<h2>Log in</h2>
    <%= form_for :user, :as => :user,
                         :url => session_path(:user) ,
                         :html => {:id => "sign_in_user"},
                         :format => :json,
                         :remote => true do |f| %>
      <div>
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: 'email', class: 'form-control' %>
      </div>
      <div>
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "password", class: 'form-control' %>
      </br>
      <!--
      <% if true # devise_mapping.rememberable? %>
        <div class="remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        <div>
      <% end %>
      -->
      <div>
        <%= f.submit "Sign in", class: 'btn btn-primary' %>
      </div>
      </br>
      <div>
        <%= f.submit "Forgot password?", class: 'btn btn-primary' %>
      </div>
      <% end %>

